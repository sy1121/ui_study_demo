<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.custom_ui_demo.view.LeafLoadingView
        android:id="@+id/leaf_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/fengshan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/fengshan"
        android:layout_alignRight="@id/leaf_loading"
        android:layout_alignBottom="@id/leaf_loading"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/finish_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/leaf_loading"
        android:layout_alignBottom="@id/leaf_loading"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:text="@string/finish_tips"
        android:visibility="gone"/>
</RelativeLayout>