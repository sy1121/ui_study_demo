<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/anim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.custom_ui_demo.view.RadarView
            android:id="@+id/radar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="120"
            android:textSize="44sp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/number_text"
            android:layout_alignBottom="@id/number_text"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="MB"/>

        <TextView
            android:id="@+id/path_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:singleLine="true"
            android:maxLength="45"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:text="sdcard/qq/picture/1/1232.png"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>